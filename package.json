{
  "name": "sweetshark-client",
  "version": "1.0.4",
  "description": "Multi-server Sharkord client vibe-coded by Sweets",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:sidecar": "cd sidecar && cargo build --release",
    "build:sidecar:check": "cd sidecar && cargo check",
    "build:win": "npm run build:sidecar && electron-builder --win",
    "build:win-portable": "npm run build:sidecar && electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run build:sidecar && electron-builder -mwl"
  },
  "build": {
    "appId": "com.sweetshark.client",
    "productName": "Sweetshark Client",
    "files": [
      "main.js",
      "preload.js",
      "view-preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "sidecar/target/release/sweetshark-capture.exe",
        "to": "sidecar/sweetshark-capture.exe",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        { "target": "nsis" },
        { "target": "portable" }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Network"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
